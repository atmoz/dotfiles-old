# audio controls
bindsym XF86AudioMute exec --no-startup-id amixer set Master toggle
bindsym XF86AudioLowerVolume exec --no-startup-id amixer set Master 5%- unmute
bindsym XF86AudioRaiseVolume exec --no-startup-id amixer set Master 5%+ unmute
bindsym XF86Eject exec --no-startup-id eject

# audio controls (for keyboards without media keys)
bindsym $mod+Down exec --no-startup-id amixer set Master 5%- unmute
bindsym $mod+Up exec --no-startup-id amixer set Master 5%+ unmute
bindsym $mod+Left exec --no-startup-id amixer set Master nmute
bindsym $mod+Right exec --no-startup-id amixer set Master umute 

# adjustable borders
bindsym $mod+t border normal
bindsym $mod+y border 1pixel
bindsym $mod+u border none

# no borders by default
new_window none

# Start i3bar to display a workspace bar (plus the system information i3status
# finds out, if available)
bar {
	status_command i3status
	mode hide

	colors {
                focused_workspace  #ffffff #ffffff #000000
                active_workspace   #222222 #222222 #ffffff
                inactive_workspace #000000 #000000 #ffffff
                urgent_workspace   #800517 #800517 #ffffff
	}
}

# decoration colors
client.focused          #000000 #000000 #ffffff #ffffff
client.focused_inactive #000000 #000000 #999999 #999999
client.unfocused        #222222 #222222 #aaaaaa #aaaaaa

# color temperature
exec --no-startup-id redshift -l 60.3:5.3 -m vidmode

# wallpaper
exec --no-startup-id nitrogen --restore

# network
exec --no-startup-id wicd-client -t

# faster thunar
exec --no-startup-id thunar --daemon

# application menu in tray
exec --no-startup-id xmenud --tray

# dropbox
exec --no-startup-id dropboxd

# lock screen on idle
exec --no-startup-id xautolock -time 60 -locker "$locker"

# notifications
exec --no-startup-id dunst
